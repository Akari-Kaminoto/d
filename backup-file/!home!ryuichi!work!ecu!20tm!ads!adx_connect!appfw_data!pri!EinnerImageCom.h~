#ifdef __cplusplus
extern "C" {
#endif

// EinnerImageCom.hで定義されている型をシリアライズした時のバイト数
#define EINNERIMAGECOM_SERIALIZED_SIZE                                         \
  (CARSTATE_SERIALIZED_SIZE + EINNERIMAGE_RGB_SERIALIZED_SIZE)

// 定数の定義

/* 電子インナー画像データ */
typedef struct {
  CarState car_state;     /* 自車情報 */
  EinnerImage_RGB imaRGB; /* RGB画像 */
} EinnerImageCom;

size_t SerializeEinnerImageCom(void *buffer, EinnerImageCom *data,
                               size_t max_buffer_size);
size_t SerializeEinnerImageComAutoRelease(void *buffer, void *data,
                                          size_t max_buffer_size);
size_t DeserializeEinnerImageCom(EinnerImageCom *data, void *buffer);
bool IsEqualEinnerImageCom(EinnerImageCom *data1, EinnerImageCom *data2);
void InitializeEinnerImageCom(EinnerImageCom *data);
void InitializeDefaultOnlyEinnerImageCom(EinnerImageCom *data);

#ifdef __cplusplus
}
#endif

#endif // DATA_DEFINITION_EINNERIMAGECOM_H
