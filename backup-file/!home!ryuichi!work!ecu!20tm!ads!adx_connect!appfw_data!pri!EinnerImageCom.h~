#ifndef DATA_DEFINITION_EINNERIMAGECOM_H
#define DATA_DEFINITION_EINNERIMAGECOM_H

#include "CarState.h"
#include "EinnerImage_RGB.h"
#include "appfw.h"
#include "system_constants.h"
#include <stddef.h>

#define EINNERIMAGECOM_DATAINFO                                                \
  "{\"name\": \"EinnerImageCom\", \"description\": "                           \
  "\"\u96fb\u5b50\u30a4\u30f3\u30ca\u30fc\u753b\u50cf\u30c7\u30fc\u30bf\", "   \
  "\"members\": [{\"name\": \"car_state\", \"type\": " CARSTATE_DATAINFO       \
