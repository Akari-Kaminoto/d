#ifdef __cplusplus
extern "C" {
#endif

// FRDFarEntityData.hで定義されている型をシリアライズした時のバイト数
#define FRDFARENTITYDATA_SERIALIZED_SIZE                                       \
  (1 + 4 + 4 + 4 + 4 + FRDFARATTRIBUTE_SERIALIZED_SIZE)

// 定数の定義
#define FRD_FAR_ENTITY_DATA_SYNC_COUNT_MIN ((uint8_t)0)
#define FRD_FAR_ENTITY_DATA_SYNC_COUNT_MAX ((uint8_t)255)
#define FRD_FAR_ENTITY_DATA_DISTANCE_MIN ((float)0)
#define FRD_FAR_ENTITY_DATA_DISTANCE_MAX ((float)327.67)
#define FRD_FAR_ENTITY_DATA_LATERAL_LOCATION_MAX ((float)40.92)
#define FRD_FAR_ENTITY_DATA_RELATIVE_SPEED_MAX ((float)51.75)
#define FRD_FAR_ENTITY_DATA_RELATIVE_ACC_MAX ((float)12.7)

/* 遠方FRD物標 */
typedef struct {
  uint8_t sync_count;        /* 同期カウンタ */
  float distance;            /* 距離 */
  float lateral_location;    /* 横位置 */
  float relative_speed;      /* 相対速度 */
  float relative_acc;        /* 相対加速度 */
  FRDFarAttribute attribute; /* 属性情報 */
} FRDFarEntityData;

size_t SerializeFRDFarEntityData(void *buffer, FRDFarEntityData *data,
                                 size_t max_buffer_size);
size_t SerializeFRDFarEntityDataAutoRelease(void *buffer, void *data,
                                            size_t max_buffer_size);
size_t DeserializeFRDFarEntityData(FRDFarEntityData *data, void *buffer);
bool IsEqualFRDFarEntityData(FRDFarEntityData *data1, FRDFarEntityData *data2);
void InitializeFRDFarEntityData(FRDFarEntityData *data);
void InitializeDefaultOnlyFRDFarEntityData(FRDFarEntityData *data);

#ifdef __cplusplus
}
#endif

#endif // DATA_DEFINITION_FRDFARENTITYDATA_H
