#ifndef DATA_DEFINITION_FRDFARENTITYDATA_H
#define DATA_DEFINITION_FRDFARENTITYDATA_H

#include "FRDFarAttribute.h"
#include "appfw.h"
#include "system_constants.h"
#include <stddef.h>

